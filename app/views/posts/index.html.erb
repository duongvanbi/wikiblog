<p style="color: green"><%= notice %></p>
<div class="container">
<div class="row align-items-start">
    <div class="col-8">
    <h1>Posts</h1>
    </div>
    <div class="col-2">
    <button type="button" class="btn btn-outline-primary float-end"><%= link_to "New post", new_post_path %></button>
    </div>
    <div class="col-2">
    <button type="button" class="btn btn-outline-success"><%= link_to "Back to home", root_path %></button>
    </div>

</div>
<table class="table table-striped">
<thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Kind</th>
    <th>Author</th>
    <th colspan="2" class="text-center">Action</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.kind %></td>
      <td><%= post.author %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
  </div>



