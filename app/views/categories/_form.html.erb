<%= form_with model: category do |form| %>
  <div class="text-center">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% category.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="text-center">
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% category.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="text-center">
    <%= form.label :category_type %><br>
    <%= form.select :category_type,Category.category_types.keys %>
    <% category.errors.full_messages_for(:types).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="text-center " style="margin-top:30px;">
    <%= form.submit %>
  </div>
<% end %>
